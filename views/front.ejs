<script>

function optim(e){
  var tp = e.replace(/-/g, " " );
  tp = tp.replace(/"/g, "");
  return tp ;
}



function addContent(){;
        var el = "";
        el+= " <div class='art-sec'>";
        el+= "           <img src="+ <%- JSON.stringify(object.content["bbc-news"].articles[0].urlToImage) %> + " /> ";
        el+= "           <h4>"+ <%- JSON.stringify((object.content["bbc-news"].source)).toUpperCase() %>+ "</h4>";
        el+= "           <h1>" + <%- JSON.stringify(object.content["bbc-news"].articles[0].title) %> + "</h1>";
        el+= "<p>" + <%- JSON.stringify(object.content['bbc-news'].articles[0].description) %> + "<p>";
        el+= "           <div id='soc-icon'>#</div>";
        el+= "           <div id='soc-icon'>@</div>";
        el+= "           <div id='soc-icon'>|||</div>";
        el+= "         </div>";
        document.getElementById("seccol").innerHTML += el;
}

addContent();

<% function content(srczz, i, tag){ return JSON.stringify(object.content[srczz].articles[i][tag]) }; ; %>

<%function glutt(src){
  for (var i = 0 ; i < 5 ; i++){%>
  var el = "";
   el     += " <div class='art-sec'>";
   el     += <%- content(src, i, "title" )  %> + "<br>";
   el     += <%- content(src, i, "description" )  %> + "<br>";
   el     += <%- content(src, i, "author" )  %> + "<br>";
   el     += <%- content(src, i, "url" )  %> + "<br>";
   el     += <%- content(src, i, "urlToImage" )  %> + "<br>";
   el     += "         </div>";
   document.getElementById("maincol").innerHTML += el ;
<%}}%>

 %>

<% glutt('bbc-news') %>
<% glutt('the-guardian-uk') %>
<% glutt('recode') %>


</script>
